<section class="section-book" id="section-book">
  <div class="row">
    <div class="book">
      <div class="book__form">
        <%= form_with url: '#', class: 'form' do %>

          <div class="u-mb-md">
            <h2 class="heading-secondary">
              Start booking now
            </h2>
          </div>

          <div class="form__group">
            <%= text_field_tag :name, nil, class: 'form__input', placeholder: 'Full Name', required: true %>
            <%= label_tag :name, 'Full Name', class: 'form__label' %>
          </div>

          <div class="form__group">
            <%= email_field_tag :email, nil, class: 'form__input', placeholder: 'Email', required: true %>
            <%= label_tag :email, 'Email', class: 'form__label' %>
          </div>

          <div class="form__group u-mb-md">
            <div class="form__radio-group">
              <input type="radio" class="form__radio-input" id="small" name="size">
              <label for="small" class="form__radio-label">
                <span class="form__radio-button"></span>
                Small tour group
              </label>
            </div>
            <div class="form__radio-group">
              <input type="radio" class="form__radio-input" id="large" name="size">
              <label for="large" class="form__radio-label">
                <span class="form__radio-button"></span>
                Large tour group
              </label>
            </div>
          </div>

          <div class="form__group">
            <button class="btn btn--green">Next step &rarr;</button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
